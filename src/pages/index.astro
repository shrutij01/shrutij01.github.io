---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Shruti Joshi">
  <!-- Hero -->
  <section class="pt-12 pb-16">
    <!-- Photo — standalone, above the card -->
    <div class="mb-8">
      <img
        src="/photo.jpg"
        alt="Shruti Joshi"
        class="w-32 h-32 rounded-2xl object-cover ring-2 ring-purple-300/40 dark:ring-purple-500/30 shadow-lg shadow-purple-200/20 dark:shadow-purple-900/20"
      />
    </div>

    <!-- Name + bio card -->
    <div class="rounded-xl border border-purple-200/60 dark:border-purple-800/30 bg-gradient-to-br from-purple-50/80 via-white to-amber-50/50 dark:from-purple-950/40 dark:via-zinc-900 dark:to-amber-950/20 p-6 sm:p-8 shadow-sm">
      <h1 class="text-2xl sm:text-3xl font-semibold text-zinc-900 dark:text-zinc-50 tracking-tight">
        Shruti Joshi
      </h1>
      <p class="mt-3 text-base text-zinc-700 dark:text-zinc-300 max-w-xl leading-relaxed">
        I am a PhD student at <a href="https://mila.quebec" class="link-underline decoration-purple-300 dark:decoration-purple-700">Mila</a> and
        <a href="https://www.umontreal.ca" class="link-underline decoration-purple-300 dark:decoration-purple-700">Université de Montréal</a>,
        working on operationalising
        <strong class="text-purple-900 dark:text-purple-300">identifiable representation learning</strong>
        and <strong class="text-purple-900 dark:text-purple-300">causal reasoning</strong> for
        <strong class="text-purple-900 dark:text-purple-300">interpretability
        and control</strong> of large language models (LLMs).
      </p>

      <!-- Links row -->
      <div class="mt-5 flex flex-wrap items-center gap-3">
        <a href="/publications" class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-purple-600 to-purple-500 text-white hover:from-purple-700 hover:to-purple-600 dark:from-purple-500 dark:to-purple-400 dark:text-zinc-950 dark:hover:from-purple-400 dark:hover:to-purple-300 shadow-sm shadow-purple-300/30 dark:shadow-purple-800/30 transition-all">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
          </svg>
          Publications
        </a>
        <a href="https://scholar.google.com/citations?user=ypwj0KwAAAAJ&hl=en" target="_blank" rel="noopener" class="btn-ghost">Google Scholar ↗</a>
        <a href="https://github.com/shrutij01" target="_blank" rel="noopener" class="btn-ghost">GitHub ↗</a>
      </div>

      <!-- Email — separate line, quieter -->
      <div class="mt-3 pt-3 border-t border-purple-100/60 dark:border-purple-800/20">
        <a href="mailto:joshi.shruti@mila.quebec" class="text-sm text-zinc-400 dark:text-zinc-500 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
          lastname<dot>firstname@mila.quebec
        </a>
      </div>
    </div>
  </section>
</BaseLayout>