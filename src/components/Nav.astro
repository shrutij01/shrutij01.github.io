---
const navItems = [
  { label: 'Research', href: '/research' },
  { label: 'Publications', href: '/publications' },
  { label: 'Experience', href: '/experience' },
  { label: 'Blog', href: '/blog' },
  { label: 'Demos', href: '/demos' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-white/80 dark:bg-zinc-950/80 border-b border-zinc-100 dark:border-zinc-800/50">
  <nav class="page-container flex items-center justify-between h-14">
    <!-- Logo / Name -->
    <a href="/" class="font-semibold text-zinc-900 dark:text-zinc-100 hover:text-accent-600 dark:hover:text-accent-400 transition-colors">
      Your Name
    </a>

    <!-- Desktop Nav -->
    <div class="hidden sm:flex items-center gap-1">
      {navItems.map(({ label, href }) => (
        <a
          href={href}
          class:list={[
            'px-3 py-1.5 text-sm rounded-md transition-colors',
            currentPath.startsWith(href)
              ? 'text-accent-600 dark:text-accent-400 bg-accent-50 dark:bg-accent-950/50'
              : 'text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-200 hover:bg-zinc-50 dark:hover:bg-zinc-800/50',
          ]}
        >
          {label}
        </a>
      ))}

      <!-- Theme toggle -->
      <button
        id="theme-toggle"
        class="ml-2 p-2 rounded-md text-zinc-500 hover:text-zinc-700 dark:hover:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors"
        aria-label="Toggle theme"
      >
        <!-- Sun icon (shown in dark mode) -->
        <svg class="w-4 h-4 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        <!-- Moon icon (shown in light mode) -->
        <svg class="w-4 h-4 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="sm:hidden p-2 rounded-md text-zinc-600 dark:text-zinc-400"
      aria-label="Menu"
    >
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="sm:hidden hidden border-t border-zinc-100 dark:border-zinc-800/50 bg-white dark:bg-zinc-950 pb-3">
    {navItems.map(({ label, href }) => (
      <a
        href={href}
        class:list={[
          'block px-6 py-2 text-sm',
          currentPath.startsWith(href)
            ? 'text-accent-600 dark:text-accent-400'
            : 'text-zinc-600 dark:text-zinc-400',
        ]}
      >
        {label}
      </a>
    ))}
  </div>
</header>

<script>
  // Theme toggle
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Mobile menu toggle
  document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
    document.getElementById('mobile-menu')?.classList.toggle('hidden');
  });
</script>
